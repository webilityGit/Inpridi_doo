                                           t-out="o.company_id.account_fiscal_country_id.vat_label"
                                           id="inv_tax_id_label"/>
                                        <t t-else="">Tax ID</t>:
                                        <span t-field="o.partner_shipping_id.vat"/>
                                    </div>
                                </div>
                            </t>
                        </div>
                        <div class="col-6" name="address_not_same_as_shipping">
