<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_invoice_document_add_downpayment_ref"
              inherit_id="account.report_invoice_document">

        <!-- Ubaci ispod naziva proizvoda (Avans) -->
        <xpath expr="//td[@name='account_invoice_line_name']/span[@t-field='line.product_id.name']"
               position="after">

            <t t-set="dp_so_line"
               t-value="(line.sale_line_ids.filtered('is_downpayment')[:1]).sudo()"/>

            <t t-if="dp_so_line">
                <span t-esc="dp_so_line._get_downpayment_description()"
                      class="text-muted"/>
            </t>

        </xpath>

    </template>
</odoo>
