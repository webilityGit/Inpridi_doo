<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Separate views for ii.edk.participants.approver -->
        <record id="ii_edk_participants_approver_list" model="ir.ui.view">
            <field name="name">ii.edk.participants.approver.list</field>
            <field name="model">ii.edk.participants.approver</field>
            <field name="type">list</field>
            <field name="arch" type="xml">
                <list editable="bottom">
                    <field name="step"/>
                    <field name="user_id"/>
                    <field name="role"/>
                </list>
            </field>
        </record>

        <record id="ii_edk_participants_approver_form" model="ir.ui.view">
            <field name="name">ii.edk.participants.approver.form</field>
            <field name="model">ii.edk.participants.approver</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="step"/>
                        <field name="user_id"/>
                        <field name="role"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="ii_edk_participants_form" model="ir.ui.view">
            <field name="name">ii.edk.participants_form</field>
            <field name="model">ii.edk.participants</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="active"/>
                            </group>
                            <group>
                                <field name="user_id"/>
                                <field name="company_id"/>
                               <!-- <field name="company_id" groups="base.group_multi_company"/>  -->
                            </group>
                        </group>
                        <field name="participant_ids" mode="list,form"/>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="ii_edk_participants_list" model="ir.ui.view">
            <field name="name">ii.edk.participants_list</field>
            <field name="model">ii.edk.participants</field>
            <field name="type">list</field>
            <field name="arch" type="xml">
                <list>
                    <field name="active" column_invisible="True"/>
                    <field name="name"/>
                    <field name="user_id"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </list>
            </field>
        </record>

        <record id="action_ii_edk_participants" model="ir.actions.act_window">
            <field name="name">Approval Teams</field>
            <field name="res_model">ii.edk.participants</field>
        </record>

        <menuitem
                id="menu_ii_edk_participants"
                action="action_ii_edk_participants"
                parent="menu_ii_edk_configuration"
                sequence="10"
        />

    </data>
</odoo>